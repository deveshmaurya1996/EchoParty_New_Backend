# Echo Party Server Configuration
NODE_ENV=development
PORT=3000
APP_NAME=Echo Party

# MongoDB
MONGO_URI=mongodb://localhost:27017/echo-party

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/v1/auth/google/callback

# Google Drive API
GOOGLE_DRIVE_CLIENT_ID=your_google_drive_client_id.apps.googleusercontent.com
GOOGLE_DRIVE_CLIENT_SECRET=your_google_drive_client_secret
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:3000/api/v1/media/drive/callback
GOOGLE_DRIVE_SCOPE=https://www.googleapis.com/auth/drive.file

# YouTube API
YOUTUBE_API_KEY=your_youtube_api_key

# JWT
JWT_SECRET=echo-party-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# Firebase Admin SDK (for push notifications)
FIREBASE_PROJECT_ID=echo-party-project
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@echo-party.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour-Private-Key\n-----END PRIVATE KEY-----\n"

# Frontend URLs
FRONTEND_URL=http://localhost:8081
ALLOWED_ORIGINS=http://localhost:8081,http://localhost:19006,exp://localhost:8081

# File Upload
MAX_FILE_SIZE=100mb
UPLOAD_DIR=./uploads

# Socket.IO
SOCKET_PING_TIMEOUT=60000
SOCKET_PING_INTERVAL=25000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100